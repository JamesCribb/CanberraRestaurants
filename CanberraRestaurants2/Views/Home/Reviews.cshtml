<div class="parallax_scrolling">
    <div class="dark_background">

        <header class="row">
            <section class="row">
                <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
                    <p class="oxygen logo">Canberra Restaurants</p>
                </div>
            </section>
            <section class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
                    <p class="niconne">Customer Reviews</p>
                </div>
            </section>
        </header>

        <main class="row row-white">

            <section class="row">
                <div class="col-md-5 col-md-offset-1 col-sm-5 col-sm-offset-1 col-xs-12">
                    <p class="oxygen oxygen-row oxygen-narrow">Be the Critic</p>
                    <p class="text-black">Have you been to a restaurant recently and loved it or loathed it? Then tell us all about it.</p>
                    <p class="text-black">Find your inner restaurant critic and create an account to review your recent dining experience.</p>
                </div>
                <div class="col-md-5 col-sm-5 col-xs-12">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <img src="~/images/foodimg4.jpg" class="image-column-narrow" />
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <img src="~/images/foodimg3.jpg" class="image-column-narrow" />
                    </div>
                </div>
            </section>

            <section class="row">
                <div class="col-md-5 col-md-offset-1 col-sm-5 col-sm-offset-1 col-xs-12">
                    <p class="text-black">Please <a asp-area="" asp-controller="Account" asp-action="Login">log in</a> or <a asp-area="" asp-controller="Account" asp-action="Register">create an account</a> to review a restaurant.</p>
                </div>
            </section>

            <section class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    @{ 
                        if (User.IsInRole("Manager") || User.IsInRole("RegisteredUser"))
                        {
                            <a asp-controller="Reviews" asp-action="Create" class="btn btn-info" style="float:left; margin-top: 50px;">Submit a Review</a>
                        }
                    }
                </div>
            </section>

            <section class="row test-review-page">
                <div class="col-xs-offset-1 col-xs-10" style="margin-top: 50px;">

                    @model IEnumerable<CanberraRestaurants2.Models.Review>

                    @{ 
                        int index = 1;
                        @foreach (var item in Model)
                        {

                            <div class="col-xs-12 single-line">
                                <h3 class="text-black">@Html.DisplayFor(modelItem => item.Heading)</h3>

                                <h4 class="text-black">@@ @Html.DisplayFor(modelItem => item.Restaurant)</h4>

                                <p class="text-black" style="font-size: 24px;">@{
                                    int numStars = item.Rating;
                                    for (int i = 0; i < numStars; i++)
                                    {
                                        <span style="color: #f8bd08;">&#x2605;</span>
                                    }
                                    for (int i = 0; i < 5 - numStars; i++)
                                    {
                                        <span>&#x2606;</span>
                                    }
                                }</p>

                                <p class="text-black">@Html.DisplayFor(modelItem => item.Comment)</p>

                                <p class="text-black">Review by <strong>@Html.DisplayFor(modelItem => item.Name)</strong> on <strong>@Html.DisplayFor(modelItem => item.SubmissionDate)</strong></p>

                                <a asp-controller="Reviews" asp-action="Details" asp-route-id="@item.Id" class="btn btn-default" style="float:left; margin-right: 5px;">Details</a>
                                <a asp-controller="Reviews" asp-action="IncrementAgrees" asp-route-id="@item.Id" class="btn btn-success" style="float: left; margin-right: 5px;">Agree (@Html.DisplayFor(modelItem => item.Agrees))</a>
                                <a asp-controller="Reviews" asp-action="IncrementDisagrees" asp-route-id="@item.Id" class="btn btn-danger" style="float: left; margin-right: 5px;">Disagree (@Html.DisplayFor(modelItem => item.Disagrees))</a>

                                @{ if (User.IsInRole("Manager"))
                                    {
                                        <a asp-controller="Reviews" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default" style="float: right; margin-left: 5px;">Delete</a>
                                        <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default" style="float: right;">Edit</a>
                                    }
                                }

                            </div>

                            index++;
                        }
                    }

                </div>
            </section>

        </main>

    </div>
</div>