@model CanberraRestaurants2.Models.Review

<div class="parallax_scrolling">
    <div class="dark_background">

        <header class="row">
            <section class="row">
                <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
                    <p class="oxygen logo">Canberra Restaurants</p>
                </div>
            </section>
            <section class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
                    <p class="niconne">Review Details</p>
                </div>
            </section>
        </header>

        <main class="row row-white">

            <div class="col-xs-offset-1 col-xs-10">

                <div class="double-line" style="margin-top: 25px; margin-bottom: 0;">
                    <p class="oxygen oxygen-row" style="text-align:left; margin-top: -15px; margin-bottom: -15px;">Review</p>
                </div>

                <div>
                    <h4>Review</h4>
                    <hr />
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Heading)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Heading)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Restaurant)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Restaurant)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Rating)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Rating)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Comment)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Comment)
                        </dd>

                        <dt>
                            Date
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.SubmissionDate)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            Agree
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Agrees)
                        </dd>
                        
                        <dt>
                            Disagree
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Disagrees)
                        </dd>
                        
                        
                    </dl>
                </div>
                <div>
                    <a asp-controller="Home" asp-action="Reviews" style="float:left;">Back to List</a>
                </div>


            </div>

        </main>

    </div>
</div>

