@model CanberraRestaurants2.Models.Review

<div class="parallax_scrolling">
    <div class="dark_background">

        <header class="row">
            <section class="row">
                <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
                    <p class="oxygen logo">Canberra Restaurants</p>
                </div>
            </section>
            <section class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
                    <p class="niconne">Create a Review</p>
                </div>
            </section>
        </header>

        <main class="row row-white">

            <div class="col-xs-offset-1 col-xs-10">
                <form asp-action="Create">
                    <div class="form-horizontal">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <!--Invisible Entry Fields, for SubmissionDate, Agrees, Disagrees, and ChangedThisSession-->

                        <div class="form-group" hidden>
                            <label asp-for="SubmissionDate" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <input asp-for="SubmissionDate" class="form-control" value="@DateTime.Now" readonly />
                                <span asp-validation-for="SubmissionDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group" hidden>
                            <label asp-for="Agrees" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <input asp-for="Agrees" class="form-control" value="0" readonly />
                                <span asp-validation-for="Agrees" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group" hidden>
                            <label asp-for="Disagrees" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <input asp-for="Disagrees" class="form-control" value="0" readonly />
                                <span asp-validation-for="Disagrees" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group" hidden>
                            <label asp-for="ChangedThisSession" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <input asp-for="ChangedThisSession" class="form-control" value="false" readonly />
                                <span asp-validation-for="ChangedThisSession" class="text-danger"></span>
                            </div>
                        </div>

                        <!--Visible Entry Fields-->

                        <div class="form-group">
                            <label asp-for="Date" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <input asp-for="Date" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" readonly/>
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <input asp-for="Name" class="form-control" value="@User.Identity.Name" readonly/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Heading" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <input asp-for="Heading" class="form-control" placeholder="Enter a Heading" required/>
                                <span asp-validation-for="Heading" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Restaurant" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <select asp-for="Restaurant" class="form-control" required>
                                    <option value="" selected disabled>Select a Restaurant</option>
                                    <option>Chaki Chaki</option>
                                    <option>Chicken Gourmet</option>
                                    <option>Cisco's Restaurante Mexicano</option>
                                    <option>Iori</option>
                                    <option>Mister Zee's</option>
                                    <option>Sage</option>
                                </select>
                                <span asp-validation-for="Restaurant" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Comment" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <textarea asp-for="Comment" class="form-control" rows="10" placeholder="Enter a Comment" required></textarea>
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rating" class="col-md-2 col-sm-2 col-xs-2 control-label"></label>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <input asp-for="Rating" value="0" min="0" max="5" required class="form-control" />
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-xs-offset-2">
                                <input type="submit" value="Create" class="btn btn-default" style="float: left;" />
                            </div>
                        </div>
                    </div>
                </form>

                <div style="float: left;">
                    <a asp-controller="Home" asp-action="Reviews">Back to List</a>
                </div>
            </div>

        </main>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
